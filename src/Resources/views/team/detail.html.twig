{% extends '@ObblmCore/base.html.twig' %}

{% block title 'obblm.team.title'|trans
        ~ ' > ' ~ version.team.name %}
{% block body %}
    <section id="team-sheet" class="container">
        <nav class="action">
        {% if(is_granted('team.edit', version.team)) %}
            <a href="{{ path('obblm_team_edit', {'team': version.team.id}) }}">
                {{ 'obblm.layout.tools.actions.edit'|trans }}
            </a> -
            <a href="{{ path('obblm_team_delete', {'team': version.team.id}) }}">
                {{ 'obblm.layout.tools.actions.delete'|trans }}
            </a>
        {% endif %}
        </nav>
        {% include '@ObblmCore/partials/flash.html.twig' %}
        <header class="header"{% if(version.team.coverFilename) %} style="background-image: url({{ team_cover(version.team) }});"{% endif %}>
            <div class="logo">
                <img alt="{{ version.team.name }}" class="image" src="{{ team_logo(version.team) }}">
            </div>
            <div class="content">
                <h1 class="title">{{ version.team.name }}</h1>
                <div class="informations">
                    <ul class="four boxes">
                        <li class="box vertical aligned">
                            <ul>
                                <li class="box information">
                                    <span class="label">
                                        <i class="icon mdi mdi-label"></i>
                                        {{ 'obblm.trait.roster'|trans }} :
                                    </span>
                                    {{ version.team|roster_name|trans({}, version.team.rule.ruleKey) }}
                                </li>
                                <li class="box information">
                                    <span class="label">
                                        <i class="icon mdi mdi-account"></i>
                                        {{ 'obblm.trait.coach'|trans }} :
                                    </span>
                                    {{ version.team.coach.username }}
                                </li>
                                <li class="box information">
                                    <span class="label">
                                        <i class="icon mdi mdi-account"></i>
                                        {{ 'obblm.trait.rule'|trans }} :
                                    </span>
                                    {{ version.team.rule|rule_name|trans({}, version.team.rule.ruleKey) }}
                                </li>
                                <!-- <li class="box information">
                                    <span class="label">{{ 'League'|trans }} :</span>
                                    Toto
                                </li> -->
                            </ul>
                        </li>
                        <li class="box vertical aligned">
                            <ul>
                                <li class="box information">
                                    <span class="label">
                                        <i class="icon mdi mdi-view-dashboard"></i>
                                        {{ 'TR'|trans }} :
                                    </span>
                                    {{ version.tr }}
                                </li>
                                <li class="box information">
                                    <span class="label">{{ 'obblm.sheet.header.team_value'|trans }} :</span>
                                    {{ version.team|calculate_value|price }}
                                </li>
                                <li class="box information">
                                    <span class="label">{{ 'obblm.forms.team.fields.treasury'|trans }} :</span>
                                    {{ version.treasure|price }}
                                </li>
                                <!-- <li class="box information">
                                    <span class="label">{{ 'Stadium'|trans }} :</span>
                                    toto
                                </li> -->
                            </ul>
                        </li>
                        <li class="box vertical aligned">
                            <ul>
                                <li class="box information">
                                    <span class="label">
                                        <i class="icon mdi mdi-dice-4"></i>
                                        {{ 'obblm.trait.rerolls'|trans }} :
                                    </span>
                                    {{ version.rerolls }} (x{{ version.team|reroll_cost|price }})
                                </li>
                                <li class="box information">
                                    <span class="label">{{ 'obblm.trait.apothecary'|trans }} :</span>
                                    {{ version.apothecary|yesno }}
                                </li>
                                <!-- <li class="box information">
                                    <span class="label">{{ 'Sponsor'|trans }} :</span>
                                    toto
                                </li> -->
                            </ul>
                        </li>
                        <li class="box vertical aligned">
                            <ul>
                                <li class="box information">
                                    <span class="label">{{ 'obblm.trait.popularity'|trans }} :</span>
                                    {{ version.popularity }}
                                </li>
                                <li class="box information">
                                    <span class="label">{{ 'obblm.trait.assistants'|trans }} :</span>
                                    {{ version.assistants }}
                                </li>
                                <li class="box information">
                                    <span class="label">{{ 'obblm.trait.cheerleaders'|trans }} :</span>
                                    {{ version.cheerleaders }}
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        <section class="row">
            {% include '@ObblmCore/team/sheet.html.twig' with { 'team': version.team } %}
        </section>
    </section>
{% endblock %}
