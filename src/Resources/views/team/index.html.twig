{% extends '@ObblmCore/base.html.twig'%}

{% block body %}
    <div class="action">
        <a href="{{ path('obblm_team_create')}}" class="ui button primary">Create a team</a>
    </div>
    <ul>
        {% for team in teams %}
            <li>
                <a href="{{ path('obblm_team_detail', {'team': team.id}) }}">
                    {{ team.name }}</a>
                {% if(is_granted('team.edit', team)) %}
                    - <a href="{{ path('obblm_team_edit', {'team': team.id}) }}">Edit</a>
                    - <a href="{{ path('obblm_team_delete', {'team': team.id}) }}">Delete</a>
                {% endif %}
            </li>
        {% else %}
            <li>Nothing to see here</li>
        {% endfor %}
    </ul>
{% endblock %}
