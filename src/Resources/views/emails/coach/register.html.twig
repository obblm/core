{% extends '@ObblmCore/emails/email-template.html.twig'%}
{% block header_title 'obblm.emails.coach.registration.welcome'|trans({'%receiver%': coach.username}, 'obblm') %}
{% block content %}
    {% do email.setSubject( 'obblm.emails.coach.registration.welcome'|trans({'%receiver%': coach.username}, 'obblm') ) %}
    <div class="container">
        <div class="text">
            <p>{{ 'obblm.emails.coach.registration.text.hello'|trans({'%receiver%': coach.username}, 'obblm') }}</p>
            <p>{{ 'obblm.emails.coach.registration.text.success'|trans({}, 'obblm') }}</p>
            <p>{{ 'obblm.emails.coach.registration.text.activate'|trans({}, 'obblm') }}</p>
        </div>
        <div class="center aligned">
            <a class="button" href="{{ absolute_url(path('activate_account', {'hash': coach.hash})) }}">{{ 'obblm.emails.coach.registration.link_to_activate'|trans({}, 'obblm') }}</a>
        </div>
    </div>
{% endblock%}
