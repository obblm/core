{% extends '@ObblmCore/emails/email-template.html.twig'%}
{% block header_title 'obblm.emails.coach.activation.welldone'|trans({'%login%': coach.username}, 'obblm') %}
{% block content %}
    {% do email.setSubject( 'obblm.emails.coach.activation.title'|trans({'%login%': coach.username }, 'obblm') ) %}
    <div class="container">
        <div class="text">
            <p>{{ 'obblm.emails.coach.activation.success'|trans({}, 'obblm') }}</p>
            <p>{{ 'obblm.emails.coach.activation.resume.title'|trans({}, 'obblm') }}</p>
            <ul>
                <li>{{ 'obblm.emails.coach.activation.resume.login'|trans({}, 'obblm') }} <b>{{ coach.username }}</b></li>
                <li>{{ 'obblm.emails.coach.activation.resume.email'|trans({}, 'obblm') }} <b>{{ coach.email }}</b></li>
                <li>{{ 'obblm.emails.coach.activation.resume.password'|trans({}, 'obblm') }} <em>{{ 'obblm.emails.coach.activation.resume.password_joke'|trans({}, 'obblm') }}</em></li>
            </ul>
            <p>{{ 'obblm.emails.coach.activation.text'|trans({}, 'obblm') }}</p>
        </div>
        <div class="aligned center">
            <a class="button" href="{{ absolute_url(path('app_login')) }}">{{ 'obblm.emails.coach.activation.link_to_login'|trans({}, 'obblm') }}</a>
        </div>
    </div>
{% endblock%}
