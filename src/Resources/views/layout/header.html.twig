<header id="header">
    <nav class="container">
        <a class="launch item">
            <i class="icon mdi mdi-menu"></i>
        </a>
        <div class="item">
            <h1 class="title">{{ 'obblm.full_title'|trans }}</h1>
        </div>
        {% if(is_granted('ROLE_OBBLM_COACH')) %}
            <div class="right item menu">
                <span>
                    <i aria-hidden="true" class="icon notranslate mdi mdi-account"></i>
                    {{ app.user.username }}
                </span>
                <ul>
                    <li>
                        <a class="link" href="{{ path('obblm_account')}}" title="{{ 'obblm.layout.header.my_account'|trans }}">
                            <i aria-hidden="true" class="icon notranslate mdi mdi-account"></i>
                            {{ 'obblm.layout.header.my_account'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('obblm.logout')}}" title="{{ 'obblm.layout.header.logout'|trans }}">
                            <i aria-hidden="true" class="icon notranslate mdi mdi-logout"></i>
                            {{ 'obblm.layout.header.logout'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        {% endif %}
    </nav>
</header>
