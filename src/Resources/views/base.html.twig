<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@5.x/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="{{ asset('/bundles/obblmcore/build/obblm-core-dark.css') }}">
    {% endblock %}
    <script>
        window.user = {{ app.user|json_encode()|raw }};
    </script>
</head>
<body class="dark pushable">
{% if(is_granted('ROLE_OBBLM_COACH')) %}
    {% include '@ObblmCore/layout/navbar.html.twig' %}
    {% include '@ObblmCore/layout/header.html.twig' %}
{% endif %}
<div class="pusher"><div class="ui main container">{% block body %}{% endblock %}</div></div>
{% block javascripts %}
    <script src="{{ asset('/bundles/obblmcore/build/runtime.js') }}"></script>
    <script src="{{ asset('/bundles/obblmcore/build/vendors~obblm-core.js') }}"></script>
    <script src="{{ asset('/bundles/obblmcore/build/obblm-core.js') }}"></script>
{% endblock %}
</body>
</html>
