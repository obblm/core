{% extends '@ObblmCore/base.html.twig' %}

{% block body %}
    {% form_theme form '@ObblmCore/form/ui-form.html.twig' %}
    {% if form.vars.errors is not empty %}
        {{ form_errors(form) }}
    {% endif %}
    {{ form_start( form, {'attr': {'class': 'ui form', 'id': 'team-rule-choice'}} ) }}
        {% if form.children.name is defined %}
            <div class="field">
                {{ form_label(form.name, 'obblm.forms.team.fields.name') }}
                {% if not form.name.vars.valid %}
                    {{ form_errors(form.name) }}
                {% endif %}
                {{ form_widget(form.name) }}
            </div>
            <div class="field">
                {{ form_label(form.roster, 'obblm.forms.team.fields.roster') }}
                {{ form_errors(form.roster) }}
                {{ form_widget(form.roster, {'attr': {'class': 'ui dropdown'}}) }}
            </div>
        {% endif %}
        <button class="ui button green" type="submit">
            {{ 'obblm.forms.team.create.buttons.submit'|trans }}
        </button>
    {{ form_end( form ) }}
{% endblock %}
