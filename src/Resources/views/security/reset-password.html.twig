{% extends '@ObblmCore/base.html.twig' %}

{% block title 'obblm.forms.login.title'|trans({}, 'obblm') %}

{% block body %}
<div class="container">
    <div class="locale-switcher aligned right">
        {{ 'obblm.layout.locale_switch'|trans({}, 'obblm') }} :
        <ul>
        {% for locale_route in get_available_locales() %}
            {% if locale_route._locale != app.request.locale %}
            <li><a href="{{ locale_route.route }}">{{ locale_route._locale }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>

    </div>
    {{ form_start( form, {'attr': {'class' : 'form login container'}} ) }}
    <form method="post" class="">
        <h1 class="title">
            <i class="icon mdi mdi-football"></i>
            {{ 'obblm.forms.reset_password.title'|trans({}, 'obblm') }}
        </h1>
        {% include '@ObblmCore/partials/flash.html.twig' %}
        <div>
            <div class="two boxes">
                <div class="box field">
                    {{ form_label( form.plainPassword.first, 'obblm.forms.coach.fields.password'  ) }}
                    {{ form_widget( form.plainPassword.first ) }}
                    {{ form_errors( form.plainPassword.first ) }}
                </div>
                <div class="box field">
                    {{ form_label( form.plainPassword.second, 'obblm.forms.coach.fields.repeat_password'  ) }}
                    {{ form_widget( form.plainPassword.second ) }}
                    {{ form_errors( form.plainPassword.second ) }}
                </div>
            </div>
        </div>
        <div class="buttons center aligned">
            <button type="submit" class="ui fluid large teal submit button">
                {{ 'obblm.forms.reset_password.button'|trans({}, 'obblm') }}
            </button>
        </div>
        <input type="hidden" name="_target_path" value="{{ path('obblm_login') }}"/>
    {{ form_rest( form ) }}
    {{ form_end( form ) }}
</div>
{% endblock %}
