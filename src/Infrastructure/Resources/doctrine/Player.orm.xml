<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Obblm\Core\Domain\Model\Player" table="obblm_player">
        <id name="id" type="guid" column="id">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Symfony\Bridge\Doctrine\IdGenerator\UuidGenerator"/>
        </id>
        <many-to-one field="team" target-entity="Obblm\Core\Domain\Model\Team" inversed-by="players" fetch="LAZY">
            <join-columns>
                <join-column name="team_id" referenced-column-name="id" nullable=""/>
            </join-columns>
        </many-to-one>
        <one-to-many field="versions" target-entity="Obblm\Core\Domain\Model\PlayerVersion" mapped-by="player" orphan-removal="true" fetch="EAGER">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id" direction="DESC"/>
            </order-by>
        </one-to-many>
        <field name="number" type="integer" length="3" column="number" precision="0" scale="0" nullable="false"  />
        <field name="position" type="string" column="position" length="50" precision="0" scale="0" nullable="false"/>
        <field name="starPlayer" type="boolean" column="star_player" precision="0" scale="0" nullable="false"/>
    </entity>
</doctrine-mapping>
